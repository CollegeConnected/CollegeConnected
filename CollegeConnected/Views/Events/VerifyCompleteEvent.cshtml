@model CollegeConnected.Models.CompleteEventViewModel
@{
    ViewBag.Title = "Adminstrator Restricted";
}
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@{
    var ccEventID = ViewContext.RouteData.Values["id"];
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("VerifyCompleteEvent", "Events", new { id = ccEventID }, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                <h4>Enter your credentials to end the event.</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-primary btn-sm"/>
                    </div>
                </div>

            }
        </section>
    </div>

</div>
<div>
    @Html.ActionLink("Back to Events", "SignIn", new { id = ccEventID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}