@model CollegeConnected.Models.EventViewModel
@{
    ViewBag.Title = "Verify Birthday";
}
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Verification</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Verify", "Events", new { studentId = Model.Student.StudentId, eventId = Model.Event.EventID }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Enter your birthday.</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="form-group">
                    @Html.LabelFor(m => m.Student.BirthDate, "Date of Birth", new {@class = "col-md-2 control-label"})
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Student.BirthDate, null, "BirthDate", new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Student.BirthDate, "", new {@class = "text-danger"})

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Verify" class="btn btn-primary btn-sm"/>
                    </div>
                </div>

            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}