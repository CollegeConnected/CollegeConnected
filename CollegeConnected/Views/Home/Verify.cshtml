@model CollegeConnected.Models.Constituent
@{
    ViewBag.Title = "Verify Birthday";
    var birthday = DateTime.Now;
}

<h2>Verification</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Verify", "Home", FormMethod.Post, new {@class = "form-horizontal", role = "form", autocomplete = "off"}))
            {
                @Html.AntiForgeryToken()
                <h4>Enter your birthday.</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                <div class="form-group">
                    <div class='col-md-10'>
                        @Html.LabelFor(m => m.BirthDate, "Date of Birth", new {@class = "col-md-2 control-label"})
                        <div class='input-group date' id='datetimepicker1'>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            @Html.TextBox("Birthday", birthday)
                            @Html.HiddenFor(m => m.BirthDate)
                            @Html.ValidationMessageFor(m => m.BirthDate, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Verify" class="btn btn-primary btn-sm"/>
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Back to Home", "Index")
                </div>
            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/scripts/bootstrap-datetimepicker.js")

    <script type="text/javascript">
        $(function() {
            $('#datetimepicker1').datetimepicker({
                format: 'MM/DD/YYYY'
            });
        });
    </script>
}